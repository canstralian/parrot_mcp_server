# ─────────────────────────────────────────────
# Server Configuration
# ─────────────────────────────────────────────
APP_NAME=Parrot_MCP_Server
APP_ENV=development               # development | staging | production
APP_DEBUG=true
HOST=0.0.0.0
PORT=8000

# ─────────────────────────────────────────────
# Logging & Telemetry
# ─────────────────────────────────────────────
LOG_LEVEL=info                    # debug | info | warning | error
LOG_FORMAT=json                   # json | text
ENABLE_METRICS=true
METRICS_PORT=9100

# ─────────────────────────────────────────────
# API Behavior / Limits
# ─────────────────────────────────────────────
REQUEST_TIMEOUT=30                # seconds
MAX_CONCURRENT_TASKS=10
CACHE_TTL=300                     # seconds
ENABLE_RATE_LIMIT=true
RATE_LIMIT=100                    # requests per minute per client

# ─────────────────────────────────────────────
# Database (non-sensitive metadata only)
# ─────────────────────────────────────────────
DB_HOST=db                        # hostname (credentials stored elsewhere)
DB_PORT=5432
DB_NAME=parrot_mcp
DB_POOL_SIZE=10
DB_SSL_MODE=prefer

# ─────────────────────────────────────────────
# AI / Model Integration
# ─────────────────────────────────────────────
DEFAULT_MODEL=qwen-coder-32b
ENABLE_HF_MODELS=true
HF_MODEL_CACHE_DIR=/app/models
MAX_GENERATION_TOKENS=2048
TEMPERATURE=0.7
TOP_P=0.95

# ─────────────────────────────────────────────
# GitHub / CI Context
# ─────────────────────────────────────────────
GITHUB_ORG=canstralian
GITHUB_REPO=parrot_mcp_server
GITHUB_BRANCH=main
ENABLE_CI_VALIDATION=true

# ─────────────────────────────────────────────
# Cloudflare Gateway / Edge Integration
# ─────────────────────────────────────────────
CF_GATEWAY_ROUTE=/v1/parrot
CF_EDGE_MODE=compat
CF_WORKER_NAMESPACE=ai
CF_AI_ENDPOINT=https://gateway.ai.cloudflare.com

# ─────────────────────────────────────────────
# Taskade / Automation
# ─────────────────────────────────────────────
TASKADE_PROJECT_NAME=Parrot_Agent_Logs
TASKADE_SYNC_INTERVAL=300
ENABLE_TASKADE_SYNC=true

# ─────────────────────────────────────────────
# MCP Server Configuration
# ─────────────────────────────────────────────
MCP_NAMESPACE=parrot
MCP_API_PREFIX=/mcp
MCP_ENABLE_DISCOVERY=true
MCP_AUTOLOAD_TOOLS=true
MCP_REGISTRY_PATH=/app/registry/tools.yml

# ─────────────────────────────────────────────
# Internal Networking / Clustering
# ─────────────────────────────────────────────
NODE_ROLE=primary                 # primary | worker
NODE_CLUSTER_NAME=parrot_cluster
HEARTBEAT_INTERVAL=10             # seconds
DISCOVERY_MODE=static
